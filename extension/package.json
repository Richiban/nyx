{
  "name": "nyx",
  "displayName": "Nanyx",
  "description": "Nanyx language support: syntax highlighting and diagnostics",
  "publisher": "Richibansoft",
  "repository": {
    "type": "git",
    "url": "https://github.com/richiban/nyx"
  },
  "license": "MIT",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:nyx",
    "onCommand:nyx.typecheckFile"
  ],
  "contributes": {
    "languages": [
      {
        "id": "nyx",
        "aliases": [
          "Nanyx",
          "nyx"
        ],
        "extensions": [
          ".nyx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nyx",
        "scopeName": "source.nyx",
        "path": "./syntaxes/nyx.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "nyx.typecheckFile",
        "title": "Nanyx: Typecheck Current File"
      }
    ],
    "configuration": {
      "title": "Nanyx",
      "properties": {
        "nyx.typecheckOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run Nanyx compiler on save to surface diagnostics."
        },
        "nyx.compilerProject": {
          "type": "string",
          "default": "compiler/Nyx.Compiler.Cli/Nyx.Compiler.Cli.fsproj",
          "description": "Relative path to Nyx.Compiler.Cli.fsproj in the workspace."
        },
        "nyx.compilerDotnetPath": {
          "type": "string",
          "default": "dotnet",
          "description": "Path to the dotnet executable."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./ && tsc -p ./server",
    "watch": "tsc -watch -p ./",
    "watch:server": "tsc -watch -p ./server",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.76.0",
    "typescript": "^5.5.4"
  }
}
