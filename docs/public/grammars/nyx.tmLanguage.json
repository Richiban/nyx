{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "nyx",
  "scopeName": "source.nyx",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#tags" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.nyx",
          "begin": "^(---)",
          "end": "^(---)"
        },
        {
          "name": "comment.line.double-dash.nyx",
          "match": "--.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.nyx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.nyx", "match": "\\\\." },
            { "name": "constant.other.placeholder.nyx", "match": "\\{[^}]*\\}" }
          ]
        },
        {
          "name": "string.quoted.single.nyx",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "name": "constant.character.escape.nyx", "match": "\\\\." }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.nyx",
          "match": "\\b-?[0-9][0-9_]*\\.[0-9][0-9_]*(?:[eE][+-]?[0-9][0-9_]*)?\\b"
        },
        {
          "name": "constant.numeric.integer.nyx",
          "match": "\\b-?[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nyx",
          "match": "\\b(def|type|context|module|import|export|use|in|match|with|if|else|return)\\b"
        },
        {
          "name": "constant.language.boolean.nyx",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.nyx",
          "match": "\\b(null|unit)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.nyx",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "name": "entity.name.tag.nyx",
          "match": "#[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.nyx",
          "match": "(\\|->|=|\\+|\\-|\\*|/|\\||&&|\\|\\||==|!=|<=|>=|<|>)"
        }
      ]
    }
  }
}
